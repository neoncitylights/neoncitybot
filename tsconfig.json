
{
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	},
	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"~/*": ["*"]
		},
		"esModuleInterop": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist/",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": false,
		"strict": true,
		"target": "es2017"
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"**/__tests__/*"
	]
}
